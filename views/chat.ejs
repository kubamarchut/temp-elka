<script>
  $("#tempslider").roundSlider({
    sliderType: "min-range",
    circleShape: "pie",
    startAngle: "315",
    lineCap: "round",
    radius: 120,
    width: 20,

    min: 16,
    max: 24,
    step: "0.5",

    svgMode: true,
	  pathColor: "#eee",
	  borderWidth: 0,

	  startValue: currentTemp,
    tooltipFormat: "tooltipVal2",

    valueChange: function (e) {
    	var color = e.isInvertedRange ? "#69DDFF": "#FF5722";
      $("#tempslider").roundSlider({ "rangeColor": color, "tooltipColor": color});
    }
});
function tooltipVal2(args) {
    return args.value.toFixed(1) + "°C";
}
</script>

